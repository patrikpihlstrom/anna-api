{
  "compilerOptions": {
	"outDir": "dist",
	"target": "es2015",
	"module": "commonjs",
	"resolveJsonModule": true,
	"moduleResolution": "node",
	"lib": [
	  "es2015",
	  "esnext.asynciterable",
	  "dom"
	],
	"sourceMap": true
  },
  "exclude": [
	"node_modules"
  ],
  "include": [
	"src/*.ts",
	"src/*/*.ts",
	"src/*/*/*.ts",
	"src/*/*/*/*.ts",
	"*.ts"
  ]
}
