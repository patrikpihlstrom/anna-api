type User {
    id: ID! @id
    name: String!
    key: String
}

type Job {
    id: ID! @id
    createdAt: DateTime @createdAt
    updatedAt: DateTime @updatedAt
    container: String
    worker: String
    driver: String!
    site: String!
    status: STATUS! @default(value: PENDING)
    log: String,
    history: [Diff] @relation(link: INLINE)
}

type DiffPart {
    id: ID! @id
    field: String!
    value: String!
}

type Diff {
    id: ID! @id
    createdAt: DateTime @createdAt
    data: [DiffPart!]! @relation(link: INLINE)
}

enum STATUS {
    PENDING
    STARTING
    RUNNING
    DONE
    ERROR
    STOPPED
}